{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "allowUnreachableCode": false,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules/**/*",
    "**/*.spec.ts",
    "./dist/**/*",
    "./tmp/*"
  ]
}